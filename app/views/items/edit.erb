<h1>Edit your item here. </h1>

<form method="POST" action="/items/<%= @item.id %>">

    <input type="hidden" name="_method" value="PATCH">
    Name: <input type="text" name="item[name]" value="<%= @item.name%>">
    <br>
    <br>
    Size: <input type="text" name="item[size]" value="<%= @item.size%>">
    <br>
    <br>
    Year: <input type="text" name="item[year]" value="<%= @item.year%>">
    <br>
    <br>
    Condition: <input type="text" name="item[condition]" value="<%= @item.condition%>">
    <br>
    <br>
    Status: <input type="text" name="item[status]" value="<%= @item.status%>">
    <br>
    <br>
    <input type="submit" value="Update Item">
</form>
<% if logged_in? %>
  <i>You are logged in with the following email:  <%= current_user.email %><i>
<% end %>

    <div>
        <br>
        <a href="/items/new">Add a new item</a> |       
        <a href="/logout">Logout</a>
    </div>

